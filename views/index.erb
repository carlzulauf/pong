<!DOCTYPE html>

<html>
<head>
    <title>Pong!</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js" type="text/javascript"></script>    
    <script>
      $(function() {
        var ws = new WebSocket('ws://localhost:3001'),
            $timer = $('#timer');

        ws.onmessage = function (e) {
          $timer.html(e.data);
        }
      });
    </script>
</head>

<body>
  <div id="timer"></div>
</body>
</html>
